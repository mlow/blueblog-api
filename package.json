{
  "name": "blueblog-backend",
  "version": "0.0.1",
  "description": "BlueBlog API",
  "main": "dist/main.js",
  "dependencies": {
    "@graphql-tools/merge": "^6.0.12",
    "@graphql-tools/schema": "^6.0.12",
    "argon2": "^0.26.2",
    "dataloader": "^2.0.0",
    "diff": "^4.0.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.2.0",
    "graphql-tag": "^2.10.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^9.1.0",
    "pg": "^8.2.1"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/pg": "^7.14.3",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "start": "node -r ts-node/register src/main.ts",
    "watch": "nodemon",
    "knex:migrate:latest": "knex --knexfile src/db/knexfile.ts migrate:latest",
    "knex:migrate:up": "knex --knexfile src/db/knexfile.ts migrate:up",
    "knex:migrate:down": "knex --knexfile src/db/knexfile.ts migrate:down"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "",
  "license": "ISC",
  "private": true
}
